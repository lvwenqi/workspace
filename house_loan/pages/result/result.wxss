/* pages/result.wxss */

page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.swiper-tab {
    position: relative;
    width: 100%;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    font-size: 32rpx;
    background: #4778bb;
}

swiper {
    font-size: 32rpx;
    height: 800rpx;
    color: #fff;
}

.swiper-tab-item {
    position: relative;
    width: 50%;
    color: #ccc;
}

.active {
    color: #fff;
}

.border {
    position: absolute;
    bottom: 0rpx;
    left: 0;
    width: 25%;
    height: 7rpx;
    background: #fff;
    transition: all 0.3s;
}

.border_active {
    left: 12%;
}

.border_active1 {
    left: 62%;
}

.detail {
    background: #5a82b9;
    padding-top: 40rpx;
}

.tit {
    padding-left: 40rpx;
    font-size: 28rpx;
    color: #fffffd;
}

.monthly {
    padding-left: 40rpx;
    font-size: 60rpx;
    line-height: 120rpx;
    font-weight: bold;
    color: #fffffd;
}

.info {
    overflow: hidden;
}

.info_left {
    box-sizing: border-box;
    float: left;
    width: 50%;
    padding-left: 40rpx;
    margin-bottom: 40rpx;
    color: #fffffd;
}

.info_right {
    box-sizing: border-box;
    float: left;
    width: 49%;
    border-left: 2rpx solid #fff;
    padding-left: 40rpx;
    margin-bottom: 40rpx;
    color: #fffffd;
}

.interest,
.refund {
    font-size: 34rpx;
    line-height: 60rpx;
    color: #fffffd;
}

.source {
    overflow: hidden;
    color: #000;
    margin-top: 40rpx;
    border-bottom: 2rpx solid #ccc;
}

.source_left {
    box-sizing: border-box;
    float: left;
    width: 50%;
    padding-left: 40rpx;
    margin-bottom: 40rpx;
}

.source_right {
    box-sizing: border-box;
    float: left;
    width: 49%;
    border-left: 2rpx solid #ccc;
    padding-left: 40rpx;
}

.principal {
    font-size: 40rpx;
    font-weight: bold;
    color: #020202;
    line-height: 60rpx;
}

.des {
    font-size: 28rpx;
    color: #7b7b7b;
    padding-left: 40rpx;
    margin-top: 30rpx;
    margin-bottom: 100rpx;
}

.btn {
    width: 700rpx;
    line-height: 80rpx;
    background: #4778bb;
    text-align: center;
    font-size: 30rpx;
    border-radius: 10rpx;
    margin: 0 auto;
}

.cut {
    font-size: 30rpx;
    display: inline-block;
    color: #fffffd;
    margin-left: 150rpx;
    font-weight: normal;
}