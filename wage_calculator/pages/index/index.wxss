.container {
    font-size: 32rpx;
    box-sizing: border-box;
}

.banner {
    display: block;
    width: 100%;
    height: 312rpx;
}

.content {
    /* padding-top: 50rpx; */
}

.item {
    box-sizing: border-box;
    width: 100%;
    height: 110rpx;
    color: #999;
    line-height: 110rpx;
    font-size: 34rpx;
    border-bottom: 2rpx solid #e5e5e5;
    padding: 0 50rpx;
}

.val {
    float: right;
    border: 1rpx solid #4778bb;
    width: 295rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 25rpx;
    padding-right: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.val.no_border {
    border: none;
    text-align: right;
    padding-right: 10rpx;
}

.val input {
    float: left;
    width: 250rpx;
    line-height: 50rpx;
    border: none;
    font-size: 30rpx;
    text-align: right;
    color: #4778bb;
    margin-top: 6rpx;
}

.money.border {
    width: 100rpx;
}

.yuan {
    color: #1a1a1a;
    margin-left: 10rpx;
}

.low {
    float: left;
    width: 130rpx;
    height: 100%;
    background: #4778bb;
    color: #fff;
    padding-left: 10rpx;
    font-size: 28rpx;
    margin-right: 10rpx;
}

.checkbox {
    width: 50rpx;
    height: 50rpx;
}

.btn {
    width: 346rpx;
    height: 94rpx;
    margin: 100rpx auto 0;
    background: #4778bb;
    color: #fff;
    font-size: 40rpx;
    line-height: 94rpx;
    text-align: center;
    font-weight: bold;
}