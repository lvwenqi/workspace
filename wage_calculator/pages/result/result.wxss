.container {
    box-sizing: border-box;
    width: 700rpx;
    margin: 30rpx auto 0;
    border: 2rpx solid #e5e5e5;
    /* border-bottom: none; */
    padding-bottom: 30rpx;
}

.title {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #4778bb;
    font-size: 40rpx;
    font-weight: bold;
    border-bottom: 2rpx solid #e5e5e5;
}

.item {
    width: 640rpx;
    margin: 0 auto;
    line-height: 87rpx;
    color: #b3b3b3;
    font-size: 32rpx;
    border-bottom: 2rpx solid #e5e5e5;
}

.item text {
    float: right;
    font-size: 30rpx;
}

.item.diff {
    border: none;
    font-size: 36rpx;
    color: #999;
    font-weight: bold;
}

.item.diff text {
    color: #f6a45a;
}

.info {}

.info_title {
    color: #bfbfbf;
    font-size: 32rpx;
    margin-top: 30rpx;
    overflow: hidden;
}

.title_left {
    float: left;
    margin-left: 95rpx;
}

.title_right {
    float: right;
    margin-right: 95rpx;
}

.icon {
    float: left;
    width: 22rpx;
    height: 22rpx;
    background: #4778bb;
    margin-right: 15rpx;
    margin-top: 10rpx;
}

.icon.red {
    background: #f6a45a;
}

.result {
    margin-top: 60rpx;
    overflow: hidden;
}

.result_left {
    float: left;
    margin-left: 34rpx;
}

.result_right {
    float: left;
    margin-left: 79rpx;
    padding-top: 18rpx;
}

.des {
    font-size: 30rpx;
    color: #999;
}

.money {
    font-size: 40rpx;
    color: #666;
}

.detail {
    width: 700rpx;
    margin: 0 auto;
    margin-top: 20rpx;
}

.detail_title {
    color: #4474b6;
    border-bottom: 1rpx solid #4474b6;
    line-height: 50rpx;
    font-size: 30rpx;
    padding-left: 20rpx;
}

.list {
    overflow: hidden;
    height: 65rpx;
    line-height: 65rpx;
    border-bottom: 1rpx solid #ccc;
}

.list.nav text {
    font-size: 30rpx;
}

.list text {
    float: left;
    width: 33.33%;
    text-align: center;
    font-size: 26rpx;
    color: #999;
}

.list.total text {
    color: #4474b6;
    font-weight: bold;
}

.btn {
    width: 346rpx;
    line-height: 94rpx;
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    font-weight: bold;
    background: #aabb47;
    margin: 0 auto;
    margin-top: 60rpx;
}