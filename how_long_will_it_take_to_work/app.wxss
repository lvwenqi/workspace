.nav {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 110rpx;
    border-top: 1rpx solid #d0d0d0;
    box-shadow: 1rpx 0 4rpx #d0d0d0;
}

.nav form {
    float: left;
    box-sizing: border-box;
    width: 50%;
    height: 100%;
    /* padding-top: 10rpx; */
}

.nav button {
    width: 100%;
    height: 100%;
    line-height: 110rpx;
    padding-left: 0;
    padding-right: 0;
    background-color: transparent;
    border: none;
    border-radius: 0px;
    margin-left: 0;
    margin-right: 0;
}

.nav button::after {
    border: none;
}

.icon {
    width: 178rpx;
    height: 38rpx;
}

.line {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 1rpx;
    height: 100%;
    background: #d0d0d0;
}


