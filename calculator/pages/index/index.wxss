/**index.wxss**/

page {
    background: #fafafa;
}

.container {
    font-size: 32rpx;
    box-sizing: border-box;
}

.banner {
    display: block;
    width: 100%;
    height: 312rpx;
}

.item {
    position: relative;
    width: 610rpx;
    height: 90rpx;
    border: 1rpx solid #e5e5e5;
    border-radius: 45rpx;
    margin: 0 auto 35rpx;
    padding: 0 50rpx;
    line-height: 90rpx;
    color: #999;
    background: #fff;
}

.item.first_item {
    margin-top: 90rpx;
}

.money {
    position: absolute;
    top: 20rpx;
    right: 50rpx;
    width: 140rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 28rpx;
    color: #999;
    border: none;
    text-align: right;
}

.input_holder {
    color: #999;
    font-size: 28rpx;
}

.select {
    position: absolute;
    top: 0rpx;
    right: 50rpx;
    line-height: 90rpx;
    color: #999;
}

.sub {
    width: 346rpx;
    line-height: 94rpx;
    margin: 93rpx auto 0;
    background: #4778bb;
    text-align: center;
    font-size: 40rpx;
    color: #fff;
    font-weight: bold;
}

.dialog {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
    z-index: 10;
    overflow: hidden;
}

.dialog_show {
    display: block;
}

.nper,
.rate,
.mode {
    /* display: none; */
    position: absolute;
    bottom: -640rpx;
    left: 0;
    width: 750rpx;
    height: 640rpx;
    overflow: auto;
    background: #fff;
    transition: bottom 0.2s ease;
}

.rate {
    bottom: -661rpx;
    height: 661rpx;
}

.mode {
    bottom: -573rpx;
    height: 573rpx;
}

.nper_show,
.rate_show,
.mode_show {
    /* display: block; */
    bottom: 0;
}

.nper .nper_item,
.rate .rate_item {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    color: #b3b3b3;
    /* background: #f5f5f5; */
    border-bottom: 2rpx solid #f5f5f5;
    box-sizing: border-box;
}

.rate .rate_title {
    font-size: 40rpx;
    color: #808080;
}

.rate .rate_des {
    font-size: 28rpx;
    color: #4778bb;
}

.custom {
    height: 100rpx;
    background: #f5f5f5;
}

.custom_left {
    float: left;
    line-height: 100rpx;
    margin-left: 125rpx;
    color: #7f7f7f;
}

.custom_left text {
    font-size: 30rpx;
}

.custom_left .loan_rate {
    display: inline-block;
    width: 140rpx;
    height: 60rpx;
    vertical-align: middle;
    margin: 0 13rpx;
    margin-top: -5rpx;
    border: 1rpx solid #ccc;
    padding-left: 10rpx;
}

.custom_right {
    float: right;
    width: 135rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #fff;
    background: #4778bb;
    text-align: center;
    margin-right: 72rpx;
    margin-top: 20rpx;
    border-radius: 10rpx;
}

.mode_item {
    height: 90rpx;
    padding-top: 30rpx;
    border-bottom: 2rpx solid #f5f5f5;
    font-size: 32rpx;
    text-align: center;
}

.mode_title {
    color: #999;
}

.mode_des {
    font-size: 28rpx;
    color: #b3b3b3;
}

.close_mode {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    background: #4778bb;
    font-size: 40rpx;
    color: #fff;
    font-weight: bold;
}

.hovernper {
    background: #f5f5f5;
}