/**app.wxss**/

.wrap {
    position: relative;
    font-size: 24rpx;
}

image {
    display: block;
    width: 100%;
}

.clear:after {
    content: "";
    display: block;
    visibility: hidden;
    width: 0;
    height: 0;
    clear: both;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.del {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    transform: translateY(-50%);
    height: 1rpx;
    background: #606060;
}

.ipx {
    padding-bottom: 68rpx;
}

.ipx_footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 68rpx;
    background: #f0f0f0;
}