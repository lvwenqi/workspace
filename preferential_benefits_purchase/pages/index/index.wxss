swiper {
    width: 100%;
    height: 400rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.p_left {
    padding-left: 32rpx;
}

.title {
    margin-top: 15rpx;
    font-size: 36rpx;
    color: #b4282d;
}

.desc {
    margin-top: 5rpx;
    margin-bottom: 18rpx;
}

.desc_item {
    float: left;
    font-size: 20rpx;
    color: #656565;
    margin-right: 16rpx;
}

.desc_item image {
    display: inline-block;
    width: 25rpx;
    height: 25rpx;
    vertical-align: middle;
    margin-right: 5rpx;
}

.daily {
    line-height: 92rpx;
    font-size: 36rpx;
    color: #333;
    text-align: center;
    background: #f0f0f0;
}

.list {
    background: #f0f0f0;
}

.list .item {
    background: #fff;
    border-top: 1rpx solid #b2b2b2;
    border-bottom: 1rpx solid #b2b2b2;
    padding: 28rpx 32rpx 20rpx;
    margin-bottom: 20rpx;
}

.list .item.first {
    border-top: none;
}

.list .item.last {
    margin-bottom: 0;
}

.limit {
    line-height: 50rpx;
    font-size: 30rpx;
    color: #121212;
    margin-bottom: 20rpx;
}

.limit view {
    float: left;
}

.time {
    margin-left: 5rpx;
}

.time text {
    display: inline-block;
    width: 42rpx;
    line-height: 50rpx;
    text-align: center;
    background: #656565;
    color: #fff;
    border-radius: 5rpx;
    margin: 0 5rpx;
}

.limit .coupon {
    float: right;
    font-size: 24rpx;
    color: #d8807e;
}

.img {
    box-sizing: border-box;
    width: 686rpx;
    margin: 0 auto;
}

.img image {
    box-sizing: border-box;
    width: 686rpx;
    height: 686rpx;
    border: 1rpx solid #b2b2b2;
}

.name {
    margin-top: 12rpx;
    margin-bottom: 5rpx;
    font-size: 32rpx;
    color: #343434;
    line-height: 43rpx;
}

.point {
    margin-bottom: 55rpx;
    font-size: 26rpx;
    color: #808080;
}

.item_footer view {
    float: left;
}

.prices {
    height: 63rpx;
}

.price {
    font-size: 48rpx;
    color: #b4282c;
    margin-right: 10rpx;
}

.original {
    position: relative;
    font-size: 30rpx;
    color: #606060;
    margin-top: 20rpx;
}

.item_footer .btn {
    float: right;
    width: 177rpx;
    height: 63rpx;
    background: #d8807e;
    border-radius: 5rpx;
    line-height: 63rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
}

.foot {
    line-height: 67rpx;
    font-size: 24rpx;
    color: #878787;
    text-align: center;
    background: #f0f0f0;
}